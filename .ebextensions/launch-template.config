Resources:
  AWSEBAutoScalingLaunchTemplate:
    Type: AWS::AutoScaling::LaunchTemplate
    Properties:
      LaunchTemplateName: !Sub '${AWS::StackName}-launch-template'
      LaunchTemplateData:
        InstanceType: t2.micro # Change to your desired instance type (e.g., t3.micro, m5.large)
        SecurityGroupIds:
          - !Ref AWSEBSecurityGroup
        Monitoring:
          Enabled: true
        KeyName: null # Set this to your EC2 key pair name if needed, or leave as null
        TagSpecifications:
          - ResourceType: instance
            Tags:
              - Key: Name
                Value: !Sub '${AWS::StackName}-instance'