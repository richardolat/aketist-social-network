Resources:
  AWSEBAutoScalingLaunchTemplate:
    Type: AWS::AutoScaling::LaunchTemplate
    Properties:
      LaunchTemplateName: "my-launch-template"  # Replace with your desired name
      LaunchTemplateData:
        InstanceType: t2.micro  # Replace with your instance type
        SecurityGroupIds:
          - Ref: AWSEBSecurityGroup  # Corrected to ensure YAML compatibility
        Monitoring:
          Enabled: true
        KeyName: null  # Replace with your EC2 key pair name, or remove this line if no key is needed
        TagSpecifications:
          - ResourceType: instance
            Tags:
              - Key: Name
                Value: "my-environment-instance"  # Replace with a meaningful tag name
